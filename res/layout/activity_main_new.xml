<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/newfragment_bg">
    
 <uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/ptr_layout"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent">
    
	<ListView 
	    android:id="@+id/newfragment_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:divider="@color/newfragment_bg"
        android:dividerHeight="0dp"/>   

  </uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

 <ProgressBar 
     android:id="@+id/new_progressbar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"/>
 
</RelativeLayout>
